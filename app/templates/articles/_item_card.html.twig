<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{ article.title }}</h5>

    {% if article.categories|length > 0 %}
      <div class="mb-2">
        {% for category in article.categories %}
          <a href="{{ path('articles_categories_show', { id: category.id }) }}" class="badge badge-secondary">
            {{ category.title }}
          </a>
        {% endfor %}
      </div>
    {% endif %}

    <p class="card-text">{{ article.content|u.truncate(100, '...') }}</p>
  </div>

  <div class="card-footer d-flex justify-content-between align-items-center">
    <small class="text-muted">
      <div>{{ 'article.comments'|trans({ '%count%': article.comments|length }) }}</div>
      <div>{{ 'article.updated_at'|trans({ '%at%': article.updatedAt|ago }) }}</div>
    </small>

    <a href="{{ path('articles_show', { id: article.id }) }}" class="btn btn-primary btn-sm">
      {{ 'action.article.read_more'|trans }}
      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
      </svg>
    </a>
  </div>
</div>
